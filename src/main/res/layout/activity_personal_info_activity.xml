<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personal_info_activity"
    android:orientation="vertical">

    <include layout="@layout/normal_action_activity_bar"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/namePI"
        android:padding="15dp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="Enter the Name"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:hint="Gender"
            android:padding="15dp"
            android:textSize="16sp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/GENDER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="10sp">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="16sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                >
            </RadioButton>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

            </RadioButton>
        </RadioGroup>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/birthdate"
        android:padding="15dp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="Enter the Birth Date"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:inputType="date"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:padding="15dp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:hint="Enter the Email"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:inputType="textEmailAddress"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/mobile_number"
        android:padding="15dp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="Enter the Mobile Number"
        android:inputType="number"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/location"
        android:padding="15dp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="Enter the Current Location"
        android:inputType="text"
        android:textSize="16sp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/hometown"
        android:padding="15dp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="Enter the Home Town"
        android:inputType="text"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_save_personalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textSize="16sp"

        >

    </Button>
</LinearLayout>